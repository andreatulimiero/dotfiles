! Aspect {{{
rofi.combi-modi:    drun,window,run
rofi.font:          System San Francisco Display 20
rofi.width:         60
rofi.padding:       30
rofi.opacity:       85
rofi.theme: ~/.config/rofi/themes/dark.rasi
! }}}

! Keybindings {{{
! Ctrl+j -> scroll down
rofi.kb-accept-entry:   Control+m,Return,KP_Enter
rofi.kb-row-down:       Down,Control+j

! Ctrl+k -> scroll up
rofi.kb-remove-to-eol:  Shift+ISO_Left_Tab
rofi.kb-row-up:         Up,Control+k,Shift+Tab
! }}}
